<%= form_with model: @post, local: true, class:"bg-white rounded-lg p-8 grid gap-4 [&>*]:max-w-md" do |item| %>
  <h1 >New Post</h1>
  <% if @post.errors.any? %>
    <div class="text-red-500">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% @post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex gap-4 items-center"><label>Image</label><%= item.file_field :image %><%# required%></div>
  <div class="flex gap-4 items-center"><label>Title</label><%= item.text_field :title, class:"form-control" %><%# required%></div>
  <%= item.submit %>
<% end %>
